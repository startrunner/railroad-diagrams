<UserControl x:Class="RailroadDiagrams.App.View.MiddleButtonThumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RailroadDiagrams.App.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="xControl"
             Background="Gainsboro">
 <Grid>
  <Border Background="{Binding ElementName=xControl, Path=Background}" Name="xBorder" MouseDown="xBorder_MouseDown" MouseMove="xBorder_MouseMove" MouseUp="xBorder_MouseUp"/>
 </Grid>
</UserControl>
